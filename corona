#!/bin/sh

[ "$(stat -c %y ~/.cache/corona 2>/dev/null | cut -d' ' -f1)" != "$(date '+%Y-%m-%d')" ] && curl -s https://www.michigan.gov/coronavirus/0,9753,7-406-98163-520743--,00.html | html2text | grep -i "Total" > ~/.cache/corona

grep -i "Total" ~/.cache/corona |
	sed 's/_//g ; s/,//g ; s/|/;/g ; s/%//g'|
	awk -F';' '{print "Inf: " $3 " Deaths: " $4 " (" ($4/$3)*100  "%)"}'
